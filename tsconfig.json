{
  "compilerOptions": {
    "target": "es2015",
    "module": "commonjs",
    "lib": [
      "dom",
      "es2015",
      "scripthost"
    ],
    "declaration": true,
    "declarationDir": "./src/typings",
    "sourceMap": false,
    "outDir": "./src/js",
    "rootDir": "./src/ts",
    "removeComments": false,
    "strict": true,
    "noImplicitAny": true,
    "baseUrl": "./src/",
    "esModuleInterop": true,
  },
  "include": [
    "src/ts",
  ],
  "exclude": [
    "node_modules",
    "src/**/*.test.ts",
  ]
}
